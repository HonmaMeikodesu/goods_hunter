<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GoodsHunter</title>
  <style>
    .container {
      width: 100%;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      grid-row-gap: 6px;
      grid-column-gap: 6px;
    }
    .img-container {
      position: relative;
    }
    .grid-unit {
      display: flex;
      flex-direction: column;
    }
    .price {
      border-radius: 0 20px 20px 0;
      position: absolute;
      background-color: rgba(0, 0, 0, 0.4);
      font-size: 24px;
      font-weight: bold;
      padding: 2px 2px 2px 4px;
      bottom: 5px;
      left: 0;
      color: #fff;
    }
    .img {
      width: 100%;
    }
    .sold {
      height: 0;
      width: 0;
      border-width: 40px;
      border-style: solid;
      border-color: red transparent transparent red;
      position: absolute;
      left: 0;
      top: 0;
    }
    .sold > div {
      transform: rotate(315deg) translate(-25px, -25px);
      font-size: 24px;
    }
    .name {
      background-color: #f5f5f5;
      border: 1px solid transparent;
      border-radius: 4px;
      box-sizing: border-box;
      flex: 1;
    }
  </style>
</head>
<body>
  <div class="container">
    <% data.forEach(function(data){ %>
    <div class="grid-unit">
      <div
        class="img-container"
        onclick="window.open('https://jp.mercari.com/item/' + '<%= data.id %>')"
      >
        <img src="<%= data.thumbnails %>" alt="" class="image" />
        <div class="price"><%= data.price %></div>
        <% if(data.status !== "on_sale") { %>
          <div class="sold"><div>SOLD</div></div>
        <% } %> 
      </div>
      <div class="name">
        <%= data.name %> 
      </div>
    </div>
    <% }) %>
  </div>
</body>
</html>