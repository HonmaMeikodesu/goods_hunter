<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GoodsHunter</title>
  <style>
    .container {
      width: 100%;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      grid-row-gap: 6px;
      grid-column-gap: 6px;
    }
    .img-container {
      position: relative;
    }
    .grid-unit {
      display: flex;
      flex-direction: column;
    }
    .price {
      border-radius: 0 20px 20px 0;
      position: absolute;
      background-color: rgba(0, 0, 0, 0.4);
      font-size: 24px;
      font-weight: bold;
      padding: 2px 2px 2px 4px;
      bottom: 5px;
      left: 0;
      color: #fff;
    }
    .img {
      width: 100%;
    }
    .sold {
      height: 0;
      width: 0;
      border-width: 40px;
      border-style: solid;
      border-color: red transparent transparent red;
      position: absolute;
      left: 0;
      top: 0;
    }
    .sold > div {
      transform: rotate(315deg) translate(-25px, -25px);
      font-size: 24px;
    }
    .name {
      background-color: #f5f5f5;
      border: 1px solid transparent;
      border-radius: 4px;
      box-sizing: border-box;
      flex: 1;
    }
  </style>
</head>
<body>
  <div class="container">
    <% data.forEach(function(data){ %>
    <div class="grid-unit">
      <a
        class="img-container"
        href="https://jp.mercari.com/item/<%= data.id %>"
      >
        <img src="http://<%= serverHost %>/proxy/getMercariImage?iv=<%= data.thumbnailData.data.iv %>&message=<%= data.thumbnailData.data.message %>&digest=<%= data.thumbnailData.digest %>" alt="" class="image" />
        <div class="price"><%= data.price %></div>
        <% if(data.status !== "ITEM_STATUS_ON_SALE") { %>
          <div class="sold"><div>SOLD</div></div>
        <% } %> 
      </a>
      <div class="name">
        <%= data.name %> 
      </div>
      <a href="#" onclick="ignoreGood" data-iv="<%= data.ignoreInstruction.data.iv %>" data-message="<%= data.ignoreInstruction.data.message %>" data-digest="<%= data.ignoreInstruction.digest %>">Click here to filter this good</a>
    </div>
    <% }) %>
  </div>
  <script>
    function ignoreGood(e) {
      fetch("http://<%= serverHost %>/goods/ignoreGood", {
        method: "POST",
        body: {
          digest: e.target.dataset.digest,
          data: {
            iv: e.target.dataset.iv,
            message: e.target.dataset.message
          }
        }
      }).then((res) => {
        return res.json()
      }).then(res => {
        if (res.code !== "200") return Promise.reject(res.message);
        window.alert("Done :)");
      }).catch((msg) => {
        window.alert(msg);
      })
    }
  </script>
</body>
</html>
