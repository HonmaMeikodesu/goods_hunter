<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests" />
  <title>GoodsHunter</title>
  <style>
    .container {
      width: 100%;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      grid-row-gap: 6px;
      grid-column-gap: 6px;
    }

    .img-container {
      width: 100%;
      position: relative;
      height: calc(100% - 4em);
    }

    .img-container img {
      max-width: 100%;
      height: 100%;
    }

    .grid-unit {
      display: flex;
      flex-direction: column;
      position: relative;
    }

    .grid-unit::before {
      content: "";
      padding-top: 200%;
    }

    .grid-unit-item {
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      display: flex;
      flex-direction: column;
    }

    .price {
      border-radius: 0 20px 20px 0;
      position: absolute;
      background-color: rgba(0, 0, 0, 0.4);
      font-size: 24px;
      font-weight: bold;
      padding: 2px 2px 2px 4px;
      bottom: 5px;
      left: 0;
      color: #fff;
    }

    .sold {
      height: 0;
      width: 0;
      border-width: 40px;
      border-style: solid;
      border-color: red transparent transparent red;
      position: absolute;
      left: 0;
      top: 0;
    }

    .sold>div {
      transform: rotate(315deg) translate(-25px, -25px);
      font-size: 24px;
    }

    .name {
      background-color: #f5f5f5;
      border: 1px solid transparent;
      border-radius: 4px;
      box-sizing: border-box;
      flex: 0 0 3em;
      line-height: 1.5em;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2;
      overflow: hidden;
      text-overflow: ellipsis;
      font-size: 14px;
    }

    .link {
      flex: 0 0 1em;
    }
  </style>
</head>

<body>
  <div class="container">
    <% data.forEach(function(data){ %>
      <div class="grid-unit">
        <div class="grid-unit-item">
          <a class="img-container" href="https://page.auctions.yahoo.co.jp/jp/auction/<%= data.id %>">
            <img
              src="http://<%= serverHost %>/proxy/getImage?iv=<%= data.thumbnailData.data.iv %>&message=<%= data.thumbnailData.data.message %>&digest=<%= data.thumbnailData.digest %>"
              alt="" class="image" onerror="this.src = this.parentElement.href" />
            <div class="price">
              <%= data.currentPrice %>
            </div>
          </a>
          <div class="name">
            <%= data.name %>
          </div>
          <a
            class="link"
            href="http://<%= serverHost %>/goods/ignoreGood?iv=<%= data.ignoreInstruction.data.iv %>&message=<%= data.ignoreInstruction.data.message %>&digest=<%= data.ignoreInstruction.digest %>"
          >
              Click here to filter this good
          </a>
        </div>
      </div>
      <% }) %>
  </div>
</body>

</html>

